{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationDir": "../../dist",
    "module": "commonjs",
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom",
      "chrome",
      "firefox-webext-browser"
    ]
  },
  "include": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx",
    "**/*.d.ts",
    "jest.config.ts",
    "template/*"
  ]
}
